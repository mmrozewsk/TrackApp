<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/track_img"
        android:layout_width="557dp"
        android:layout_height="452dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="17dp"
        android:layout_marginTop="26dp"
        android:contentDescription="@string/track_name"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/length"
        android:layout_width="606dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/laps"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/track_img"
        android:text="@string/length"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/laps"
        android:layout_width="606dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="19dp"
        android:layout_toEndOf="@+id/track_img"
        android:text="@string/laps"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="606dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/best_time"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="13dp"
        android:layout_toEndOf="@+id/track_img"
        android:text="@string/date"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/best_time"
        android:layout_width="606dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/last_time"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/track_img"
        android:text="@string/best_time"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/last_time"
        android:layout_width="606dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="73dp"
        android:layout_toEndOf="@+id/track_img"
        android:text="@string/last_time"
        android:textSize="25sp" />

</RelativeLayout>